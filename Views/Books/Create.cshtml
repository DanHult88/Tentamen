<form class="form-style" asp-action="Create" method="POST">


    <div class="form-row">
        <label for="title">Title:</label>
        <input type="text" id="title" name="Title" />
    </div>

    <div class="form-row">
        <label for="author">Author:</label>
        <input type="text" id="author" name="Author" />
    </div>

    <div class="form-row">
        <label for="isbn">ISBN:</label>
        <input type="text" id="isbn" name="ISBN" />
    </div>

    <div class="form-row">
        <label for="genre">Genre:</label>
        <input type="text" id="genre" name="Genre" />
    </div>

    <div class="form-row">
        <label for="inhouse">Inhouse:</label>
        <input type="checkbox" id="inhouse" name="Inhouse" value="true" />
    </div>

    <div class="form-row">
        <label for="checkedout">CheckedOut:</label>
        <input type="checkbox" id="checkedout" name="CheckedOut" value="true" />

    </div>

    <div class="form-row">

        <input type="submit" value="Add book" />

    </div>
</form>